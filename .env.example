# AMFbot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server URL (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Default model to use (default: llama3.2)
AMFBOT_MODEL=llama3.2

# =============================================================================
# Media Generation
# =============================================================================

# Directory for AI model weights
AMFBOT_MODELS_DIR=./models

# Directory for generated media output
AMFBOT_OUTPUT_DIR=./outputs

# Media generation server port
AMFBOT_MEDIA_PORT=8765

# =============================================================================
# Cloud API Fallback (Optional)
# =============================================================================
# Configure these if your hardware doesn't support local generation

# Hugging Face API Token
# HF_TOKEN=hf_xxxxxxxxxxxxx

# Replicate API Token (for video generation fallback)
# REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxx

# =============================================================================
# MCP Server Configuration
# =============================================================================

# GitHub Personal Access Token (for GitHub MCP server)
# GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxxx

# Google OAuth credentials (for Google Drive MCP server)
# GOOGLE_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxx

# =============================================================================
# Security
# =============================================================================

# Root access session timeout in milliseconds (default: 300000 = 5 minutes)
ROOT_SESSION_TTL=300000

# Always require confirmation for sudo (set to true to disable sessions)
ALWAYS_CONFIRM_SUDO=false
